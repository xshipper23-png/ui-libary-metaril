local Library = {}

function Library:CreateWindow(hubName)
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "MetaLib"
    ScreenGui.Parent = game.CoreGui
    ScreenGui.ResetOnSpawn = false

    -- MainFrame
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Position = UDim2.new(0.161, 0, 0.126, 0)
    MainFrame.Size = UDim2.new(0, 510, 0, 314)
    MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui
    Instance.new("UICorner", MainFrame)

    -- DEIN KORRIGIERTES TEXTLABEL (GRAU)
    local NameLabel = Instance.new("TextLabel")
    NameLabel.Name = "HubNameLabel"
    NameLabel.Position = UDim2.new(0.012, 0, 0.016, 0)
    NameLabel.Size = UDim2.new(0, 272, 0, 28)
    NameLabel.BackgroundColor3 = Color3.fromRGB(152, 152, 152) -- Deine Farbe
    NameLabel.Text = hubName or "Meta Hub"
    NameLabel.TextColor3 = Color3.fromRGB(0, 0, 0) -- Schwarzer Text
    NameLabel.Font = Enum.Font.GothamBold
    NameLabel.TextSize = 14
    NameLabel.Parent = MainFrame
    Instance.new("UICorner", NameLabel)

    -- Frame 1 (Header) & Frame 2 (Sidebar) folgen hier...
    -- (Ich lasse den restlichen Code weg, damit es Ã¼bersichtlich bleibt)

    return MainFrame
end

return Library
