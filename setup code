local Metaril = {}
Metaril.__index = Metaril

-- Hier definieren wir das Haupt-Framework
function Metaril:CreateWindow(config)
    local Main = {}
    
    -- GUI Erstellung
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "MetarilUI"
    ScreenGui.Parent = game:GetService("CoreGui")
    
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Size = UDim2.new(0, 450, 0, 300)
    MainFrame.Position = UDim2.new(0.5, -225, 0.5, -150)
    MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 35) -- Metaril Dark Theme
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui
    
    local Corner = Instance.new("UICorner")
    Corner.CornerRadius = UDim.new(0, 10)
    Corner.Parent = MainFrame

    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, -20, 0, 40)
    Title.Position = UDim2.new(0, 15, 0, 0)
    Title.Text = config.Name or "Metaril UI"
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.BackgroundTransparency = 1
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 18
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.Parent = MainFrame

    print("Metaril: Window '" .. Title.Text .. "' geladen!")
    
    function Main:CreateTab(name)
        print("Tab erstellt: " .. name)
        -- Hier kannst du sp√§ter Tab-Logik einbauen
        return {}
    end
    
    return Main
end

return Metaril -- WICHTIG: Das muss in der letzten Zeile stehen!
